md-button.md-raised.md-primary(ui-sref="feed")
  i.fa.fa-arrow-left
  | Back to Videos

md-card(layout="column" layout-padding)
  span.md-headline {{detail.flag.snippet.title}}
  span.md-subhead Published on {{detail.convertDate(detail.flag.snippet.publishedAt)}}

  md-content(layout layout-xs="column" flex)
    youtube-video(video-id="detail.flag.snippet.resourceId.videoId" flex-xs="100" flex-gt-xs="75")
    p(flex layout-padding) {{detail.flag.snippet.description}}
